<?xml version="1.0" encoding="UTF-8"?>
<beans
		xmlns="http://www.springframework.org/schema/beans" 
		xmlns:p="http://www.springframework.org/schema/p" 
		xmlns:aop="http://www.springframework.org/schema/aop"
 		xmlns:tx="http://www.springframework.org/schema/tx"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xsi:schemaLocation="http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans.xsd 
			http://www.springframework.org/schema/tx
            http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
            http://www.springframework.org/schema/aop
            http://www.springframework.org/schema/aop/spring-aop-2.5.xsd">
			
		<!-- 配置Action及其依赖 -->		
		<bean id="dailyReportAction" class="com.cmttbj.bscms.modules.action.DailyReportAction"
			p:dailyReportService-ref="dailyReportService"
			p:serviceCentreService-ref="serviceCentreService" 
			p:newBroadbandService-ref="newBroadbandService"
			p:renewBroadbandService-ref="renewBroadbandService"
			p:doorToDoorService-ref="doorToDoorService"
			p:mobileProductService-ref="mobileProductService"
			p:customerService-ref="customerService"/> 
		<bean id="loginAction" class="com.cmttbj.bscms.modules.action.LoginAction"
			p:userInfoService-ref="userInfoService" /> 
		<bean id="serviceCentreAction" class="com.cmttbj.bscms.modules.action.ServiceCentreAction"
			p:serviceCentreService-ref="serviceCentreService" /> 
		<bean id="userInfoAction" class="com.cmttbj.bscms.modules.action.UserInfoAction"
			p:userInfoService-ref="userInfoService"
			p:serviceCentreService-ref="serviceCentreService" /> 
		<bean id="pageAction" class="com.cmttbj.bscms.modules.action.PageAction" /> 
</beans>
